<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="200.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="fr.greta92.banqueappfx.AjouterCompteController">
   <children>
      <VBox layoutX="-21.0" AnchorPane.bottomAnchor="-5.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <HBox fx:id="titulaireName" layoutX="20.0" layoutY="100.0" onDragDetected="#onAddNewAccount" prefHeight="32.0" prefWidth="380.0" spacing="20.0">
               <children>
                  <Label text="Titulaire" />
                  <TextField fx:id="titulaireName" HBox.hgrow="ALWAYS" />
               </children>
               <opaqueInsets>
                  <Insets />
               </opaqueInsets>
               <padding>
                  <Insets top="25.0" />
               </padding>
               <VBox.margin>
                  <Insets bottom="5.0" />
               </VBox.margin>
            </HBox>
            <HBox fx:id="titulaireNameError" alignment="CENTER">
               <children>
                  <Label fx:id="titulaireNameError" text="Nom du titulaire incorrecte" textFill="#ee0000" />
               </children>
               <padding>
                  <Insets left="20.0" />
               </padding>
               <VBox.margin>
                  <Insets bottom="15.0" />
               </VBox.margin>
            </HBox>
            <HBox fx:id="titulaireSolde" alignment="CENTER_LEFT" prefWidth="380.0" spacing="20.0">
               <children>
                  <Label text="Solde" />
                  <TextField fx:id="titulaireSolde" HBox.hgrow="ALWAYS" />
               </children>
               <VBox.margin>
                  <Insets bottom="5.0" left="10.0" right="10.0" top="10.0" />
               </VBox.margin>
            </HBox>
            <HBox alignment="CENTER">
               <children>
                  <Label fx:id="titulaireSoldeError" text="Veuillez entrer un solde valide" textFill="#ee0000" />
               </children>
               <padding>
                  <Insets left="20.0" />
               </padding>
               <VBox.margin>
                  <Insets bottom="15.0" />
               </VBox.margin>
            </HBox>
            <HBox alignment="CENTER" prefHeight="28.0" prefWidth="400.0" spacing="20.0">
               <children>
                  <Button fx:id="saveAccountButton" mnemonicParsing="false" onAction="#onAddNewAccount" text="SAVE ACCOUNT" />
                  <Button fx:id="cancelAcountSavingButton" mnemonicParsing="false" onAction="#onCloseAccountSavingForm" text="CANCEL" />
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
</AnchorPane>
